<?xml version="1.0" encoding="UTF-8"?>
<rules
    xmlns="http://namespaces.plone.org/diazo"
    xmlns:css="http://namespaces.plone.org/diazo/css"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

    <!-- Prevent theme usage in zmi-->
    <rules css:if-content="#visual-portal-wrapper">
        <theme href="index.html" />
    </rules>

<!--    <before content-children='/html/head' theme='/html/head' />-->
    <replace content="/html/head/title" theme="/html/head/title" />
    <replace content="/html/head/base" theme="/html/head/base" />
    <replace content="/html/head/meta" theme="/html/head/meta" />

    <copy attributes="class" css:theme="body" css:content="body"/>

    <!-- header -->

    <copy css:content="#portal-siteactions" css:theme="#topmenu" />
    <prepend css:content="#portal-personaltools" css:theme="#topmenu" />


<!--
    <append content='//*[@id="portal-searchbox"]' theme='//*[@id="topmenu"]' />
-->
    <copy content='//*[@id="portal-globalnav"]' theme='//*[@id="menu"]' />
    <drop attributes="id" css:content="#portal-globalnav"/>

    <!-- content -->

    <before css:theme-children="#content-wrapper" css:content="#viewlet-above-content" />

    <before css:theme="h1.title" css:content="#viewlet-above-content-title" />
    <replace css:theme="h1.title" css:content="h1.documentFirstHeading" />
    <after css:theme="h1.title" css:content="#viewlet-below-content-title" />
    <after css:theme="h1.title" css:content="div.documentDescription" />

    <before css:theme="#content" css:content="#viewlet-above-content-body" />
    <replace css:theme-children="#content" css:content-children="#content-core" />
    <after css:theme="#content" css:content="#viewlet-below-content-body" />


    <!-- columns -->

    <!-- footer -->

    <copy content='//*[@id="portal-footer"]' theme='//*[@id="footer"]' />

    <append content='//*[@id="portal-colophon"]' theme='//*[@id="footer"]' />



</rules>
